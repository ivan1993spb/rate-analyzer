<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/5.6/phpunit.xsd"
        bootstrap="vendor/autoload.php"
        timeoutForLargeTests="3600"
        verbose="true">
    <testsuites>
        <testsuite name="Test CandleBatcher">
            <file>tests/CandleBatcherTest.php</file>
        </testsuite>
        <testsuite name="Test CandleAggregator">
            <file>tests/CandleAggregatorTest.php</file>
        </testsuite>
        <testsuite name="Test Correlation">
            <!--<file>tests/CorrelationTest.php</file>-->
        </testsuite>
        <testsuite name="Test Scanners">
            <file>tests/CandleEmitterScannerTest.php</file>
        </testsuite>
        <testsuite name="Test candle variables">
            <directory suffix="Test.php">tests/CandleVariables</directory>
        </testsuite>
    </testsuites>
</phpunit>
